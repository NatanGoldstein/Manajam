<SearchScreen>:
    name: 'search_screen'
    on_enter: search_text.focus = True
    canvas.before:
        Color:
            rgba: 250/255,237/255,214/255,1
        Rectangle:
            size:self.size
            pos:self.pos
    FloatLayout:
        MDScrollView:
            do_scroll_x: False
            do_scroll_y: True
            scroll_y: 1
            pos_hint: {'top': .8}

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 3

                Label:
                    text: 'Label 16'
                    size_hint_y: None
                    height: 300

                Label:
                    text: 'Label 2'
                    size_hint_y: None
                    height: 300

                Label:
                    id: 'place_holder'
                    text: ''
        MDScrollView:
            do_scroll_x: True
            do_scroll_y: False
            scroll_x: 0
            size_hint_y: .2
            pos_hint: {'x': 0, 'y': .83}

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 1
                size_hint_x: 3
                spacing: 25

                Label:
                    size_hint_x: None
                    width: 10

                SearchFilterWidget:
                    SearchFilter:
                        id: 'Instrument'
                        text: 'Instrument'
                        values: ["Guitar", "Piano", "Drums", "Brass", "Vocal"]
                    Image:
                        source: "./assets/images/guitar.png"
                        size_hint: .8,.8
                        pos_hint: {'x': -.25, 'y': .45}

                SearchFilterWidget:
                    SearchFilter:
                        id: 'Level'
                        text: 'Level'
                        values: ["Beginner", "Intermediate", "Pro"]
                    Image:
                        source: "./assets/images/level.png"
                        size_hint: .52,.52
                        pos_hint: {'x': -.12, 'y': .55}

                SearchFilterWidget:
                    SearchFilter:
                        id: 'Genre'
                        text: 'Genre'
                        values: ["Rock", "Pop", "Jazz"]
                    Image:
                        source: "./assets/images/music.png"
                        size_hint: .52,.52
                        pos_hint: {'x': -.12, 'y': .55}

                Label:
                    id: 'place_holder'
                    text: ''
        SubHeader:
            size_hint_x: 1
            size_hint_y: .01
            pos_hint: {'x': 0, 'y': .82}
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    pos: self.pos[0] - 1, self.pos[1] - 1
                    size: self.width +2 , self.height + 2# Slightly larger than the input box

        SubHeader:
            size_hint_x: .94
            size_hint_y: .06
            pos_hint: {'x': .03, 'y': .91}
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.4  # Black color with 20% opacity for shadow
                RoundedRectangle:
                    pos: self.pos[0] - 1, self.pos[1] - 1
                    size: self.width +2 , self.height + 2# Slightly larger than the input box
                    radius: [38]
                Color:
                    rgba: 250/255,237/255,214/255,1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [38]  # Corner radius

        DefaultText:
            id: search_text
            pos_hint: {'x': .06, 'y': .875}
            hint_text: 'Search'


        Image:
            source: "./assets/images/gobackRight.png"
            pos_hint: {'x': .88, 'y': .9}
            size_hint: .08,.08

        Button:
            id: back
            background_color: 1,1,1,0
            size_hint: .1, .07
            pos_hint: {'x': .88, 'y': .9}
            on_press:
                app.root.current = 'main_screen'
                app.root.transition.direction = 'right'



        DefaultLabel:
            text: root.search_result