<MapScreen>:
    name: 'map_screen'
    FloatLayout:
        MapView:
            size_hint: 1,1
            lat: root.current_lat  # Use the current latitude
            lon: root.current_lon  # Use the current longitude
            zoom: 12  # Adjust the zoom level as needed

        SubHeader:
            size_hint_x: .94
            size_hint_y: .07
            pos_hint: {'x': .03, 'y': .9}
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.1  # Black color with 20% opacity for shadow
                RoundedRectangle:
                    pos: self.x + 2, self.y - 4  # Offset for shadow
                    size: self.width + 3, self.height + 6  # Slightly larger than the input box
                    radius: [38]
                Color:
                    rgba: 250/255,237/255,214/255,1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [38]  # Corner radius

        DefaultText:
            id: search_text
            pos_hint: {'x': .06, 'y': .86}
            hint_text: 'Search'
            on_focus:
                search_text.focus = False
                app.root.go_to_search_screen()

        Image:
            source: "./assets/images/search.png"
            pos_hint: {'x': .4, 'y': .435}
        



